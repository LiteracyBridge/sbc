{
    "extends": [
        "@vue/tsconfig/tsconfig.web.json"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
            "node",
            "vite/client"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "es2015",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
